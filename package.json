{
  "name": "order-manager",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Guilherme Rauen",
  "description": "Sample of an Order Management System using Domain-Driven Design (DDD).",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint --ext=.ts ./src",
    "lint:fix": "eslint --ext=.ts ./src --fix",
    "test": "jest --no-cache --runInBand --detectOpenHandles --verbose",
    "test:all": "npm run lint && npm run test:cov && npm audit --omit dev && npm run build",
    "test:cov": "npm run test -- --collectCoverage --coverageDirectory=\"./coverage\"",
    "test:watch": "npm run test -- --watch",
    "start": "node dist/src/index.js",
    "start:dev": "tsc-watch -p tsconfig.json --onSuccess \"node dist/src/index.js\""
  },
  "dependencies": {
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-validator": "7.0.1",
    "helmet": "7.0.0",
    "mongoose": "7.5.2",
    "pino": "8.15.1",
    "pino-pretty": "10.2.0",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.0",
    "ts-error": "1.0.6"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/jest": "29.5.5",
    "@types/node": "20.6.3",
    "@types/supertest": "2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "4.1.4",
    "@typescript-eslint/eslint-plugin": "6.7.2",
    "@typescript-eslint/parser": "6.7.2",
    "eslint": "8.49.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jest": "27.4.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-promise": "6.1.1",
    "jest": "29.7.0",
    "prettier": "3.0.3",
    "rimraf": "5.0.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "tsc-watch": "6.0.4",
    "typescript": "5.2.2"
  }
}
